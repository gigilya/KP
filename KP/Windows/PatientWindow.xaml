<Window x:Class="StomatologyProject.Windows.PatientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StomatologyProject.Windows"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Пациенты" Height="700" Width="700" MinHeight="650" MinWidth="700">
    <Grid>
        <StackPanel>
            <Canvas Height="100">
                <Button x:Name="MenuButton"
                        Style="{StaticResource MaterialDesignFlatButton}" 
                        Click="MenuButton_Click"
                        Canvas.Right="20" 
                        Canvas.Top="20" 
                        Cursor="Hand" 
                        Foreground="#FF698AFF">
                    <Image Source="Resurs\arrow-left.png" />
                </Button>
                <Image Source="Resurs\toothbrush-paste.png" 
                       HorizontalAlignment="Center" 
                       Height="60" 
                       VerticalAlignment="Top"/>
                <Label Content="Клуб зубастиков" 
                       Canvas.Left="65" 
                       Canvas.Top="18" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Top" 
                       FontSize="16" 
                       FontFamily="Arial" 
                       FontWeight="Bold"/>
            </Canvas>
            <DataGrid x:Name="TablePatient" 
                      Style="{StaticResource MaterialDesignDataGrid}"
                      MinHeight="450"
                      MinWidth="450"
                      HorizontalAlignment="Center" AutoGenerateColumns="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Фамилия" Binding="{Binding PatientLastName}" CanUserReorder="False"/>
                    <DataGridTextColumn Header="Имя" Binding="{Binding PatientName}" CanUserReorder="False"/>
                    <DataGridTextColumn Header="Отчество" Binding="{Binding PatientMiddleName}" CanUserReorder="False"/>
                    <DataGridTextColumn Header="Пол" Binding="{Binding PatientGender}" CanUserReorder="False"/>
                    <DataGridTextColumn Header="Дата рождения" Binding="{Binding PatientBirthday}" CanUserReorder="False"/>
                    <DataGridTextColumn Header="Адрес" Binding="{Binding PatientAddress}" CanUserReorder="False"/>
                    <DataGridTextColumn Header="Контактная информация" Binding="{Binding PatientContactInfo}" CanUserReorder="False"/>
                </DataGrid.Columns>
            </DataGrid>
            <Grid MinWidth="450" Height="85" HorizontalAlignment="Center" Margin="10,0,10,0">
                <Button x:Name="AddButton"
                        Content="Добавить" 
                        HorizontalAlignment="Left" 
                        Background="#FF698AFF" 
                        BorderBrush="#FF698AFF" 
                        FontFamily="Arial"
                        FontSize="14"/>
                <Button x:Name="DeletButton"
                        Content="Удалить" 
                        HorizontalAlignment="Center" 
                        Background="#FF698AFF" 
                        BorderBrush="#FF698AFF" 
                        FontFamily="Arial" 
                        FontSize="14"/>
                <Button x:Name="UpdateButton"
                        Content="Обновить"
                        HorizontalAlignment="Right"
                        Background="#FF698AFF" 
                        BorderBrush="#FF698AFF" 
                        FontFamily="Arial" 
                        FontSize="14"/>
            </Grid>
        </StackPanel>
    </Grid>
</Window>
